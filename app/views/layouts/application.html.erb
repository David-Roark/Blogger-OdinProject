<!DOCTYPE html>
<html>
  <head>
    <title>Blogger</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="flash"><%= flash.notice %></p>

    <details>
      <summary><h3>&#9776 Go to</h3></summary>
      <%= link_to "All Articles", articles_path %> <br>
      <%= link_to "All Tags", tags_path %> <br>
      <% if logged_in? %>
        <%= link_to "Manager Authors", authors_path %> <br>
      <% end %>
    </details>

    <div id="container">
      <div id="content">
        <%= yield %>
        <br>
        <hr>
        <h6>
          <% if logged_in? %>
            <%= "Logged in as #{current_user.username} (#{current_user.email})" %>
            <%= link_to "(logout)", logout_path %> <br>
          <% else %>
            <%= link_to "(login as admin)", login_path %>
          <% end %>
        </h6>
      </div>
    </div>

  </body>
</html>
