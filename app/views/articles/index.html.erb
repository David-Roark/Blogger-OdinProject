<h1>All Articles</h1><br><br>
<ul id = 'articles'>
  <% @articles.each do |article| %>
  <li >
    <%= link_to article.title, article_path(article, class: 'article_title') %>
    <p style="font-size: 0.7em; text-align: right;">
      (Posted <%= distance_of_time_in_words_to_now(article.created_at) %> later)
    </p>
  </li>
  <% end %>
</ul>
<%= link_to "New article", new_article_path, class: 'new_article' %>
